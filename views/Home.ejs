<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Expense Tracker</title>

    <!-- bs css -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    />

    <!-- fa css -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <!-- custom css -->
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="wrapper container">
      <h1 class="mb-2">Expense Tracker</h1>
      <form action="/" method="post">
        <div class="form-group">
          <input
            type="text"
            placeholder="Expense name..."
            name="name"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            placeholder="Expense amount..."
            name="amount"
            min="1"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <select name="category" class="form-control">
            <option disabled selected>Categories</option>
            <option value="transport">Transport</option>
            <option value="entertainment">Entertainment</option>
            <option value="food">Food</option>
            <option value="rent">Rent</option>
            <option value="misc">Misc</option>
          </select>
          <button type="submit" class="btn mt-3 btn-block btn-danger">
            Add Expense +
          </button>
        </div>
      </form>
    </div>

    <main class="wrapper container expense-list">
      <% if (typeof expenses === typeof []){ expenses.forEach(expense=>{%>
      <div class="expense">
        <div class="row">
          <div class="col-lg-5">
            <h3><%= expense.name %></h3>
          </div>
          <div class="col-lg-3-"><h3><%= expense.amount %></h3></div>
          <div class="col-lg-2">
            <a
              href="/delete/<%= expense._id %>"
              class="btn btn-block btn-danger"
              ><i class="fa-solid fa-trash"></i
            ></a>
          </div>
        </div>
      </div>
      <%}) }else{ %>
      <div class="expense">
        <h2><%= expenses %></h2>
      </div>
      <% } %>
    </main>
  </body>
</html>
